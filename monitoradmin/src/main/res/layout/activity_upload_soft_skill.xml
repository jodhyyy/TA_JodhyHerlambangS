<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".softskill.UploadSoftSkill">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/back"
            android:layout_marginEnd="300dp"
            android:src="@drawable/ic_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/Gray"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:src="@drawable/pic_user"
                android:id="@+id/uploadImage"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadNis"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Masukan NIS"
                android:gravity="start|center_vertical"
                android:textColor="@color/Gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/uploadNama"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Masukan Nama"
                android:gravity="start|center_vertical"
                android:textColor="@color/Gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadSoftskill"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Masukan SoftSkill"
                android:gravity="start|center_vertical"
                android:textColor="@color/Gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadKeterangan"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Masukan Keterangan"
                android:gravity="start|center_vertical"
                android:textColor="@color/Gray"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>